<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/server"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:stretchColumns="1" >

     <Button
        android:id="@+id/serverSelection"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00000000"
        android:drawableTop="@drawable/click"
        android:text="@string/connect_to_a_server"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="sans" /> 

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >
        
         <TextView
            android:id="@+id/server_header_left"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:text="@string/source"
            android:textSize="18sp" />
         <ImageButton
            android:id="@+id/transfer12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:contentDescription="Transfer12"
            android:visibility="invisible"
            android:src="@drawable/arrow_down" />
        
           <TextView
            android:id="@+id/server_header_right"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:text="@string/source"
            android:textSize="18sp" />
        
          <TextView
            android:id="@+id/dummy"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:text="@string/source"
            android:textSize="18sp" />
         
           
            <ImageButton
            android:id="@+id/transfer21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:contentDescription="Transfer21"
            android:visibility="invisible"
            android:src="@drawable/arrow_up" />
        
      
      <!-- Below ImageView added to hold a  
        <ImageButton
        	android:id="@+id/directoryUp"
        	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        	android:contentDescription="Back"
        	android:src="@drawable/folder_up" /> -->
        	 
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#000000"
        android:orientation="vertical" >
    </ListView>

</LinearLayout>